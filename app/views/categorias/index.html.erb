
<p id="notice"><%= notice %></p>


<h1>Lista de Categorias</h1>




<table class="table table-condensed" >
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categorias.each do |categoria| %>
      <tr row=25px>
        <td width="800"><%= categoria.nombre %></td>
        <td width="10"><%= link_to 'Mostrar', categoria, class: "btn btn-success" %></td>
        <td width="10"><%= link_to 'Editar', edit_categoria_path(categoria), remote: "true", class: "btn btn-success" %></td>
        <td width="10"><%= link_to 'Eliminar', categoria, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-success" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'Nueva Categoria', new_categoria_path, remote: "true", class: "btn btn-default"  %>
