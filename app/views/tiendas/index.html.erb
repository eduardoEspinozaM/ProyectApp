<div class="row">
<p id="notice"><%= notice %></p>
  <div class="col-sm-6 col-md-4">
    <% @productos.each do |producto| %>
    <div class="thumbnail">
      <%= image_tag producto.imagen, height: 80  %>
      <div class="caption">
        <h3><%= producto.nombre %></h3>
        <p><%= producto.descripcion %></p>
        <p><a href="#" class="btn btn-primary" role="button">Button</a>
        <%= link_to 'Agregar', agregar_producto_path(producto), method: "put", class: 'btn btn-success ' %>
      </div>
    </div>
<% end %>
  </div>
</div>
<br>
