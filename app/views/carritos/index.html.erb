<p id="notice"><%= notice %></p>

<h1>Listing Carritos</h1>

<table>
  <thead>
    <tr>
      <th>Cliente</th>
      <th>Total</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @carritos.each do |carrito| %>
      <tr>
        <td><%= carrito.cliente_id %></td>
        <td><%= carrito.total %></td>
        <td><%= link_to 'Show', carrito %></td>
        <td><%= link_to 'Edit', edit_carrito_path(carrito) %></td>
        <td><%= link_to 'Destroy', carrito, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

